@model UpdateTagCloudDto
@{
    ViewData["Title"] = "UpdateTagCloud";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Etiket Bulutu Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Etiket Bulutu alanına güncellemek istediğiniz veri girişini aşağıdaki panelden yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="TagCloudID" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Etiket Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Bulut etiket adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBlogID">Blog ID</label>
                                <input type="text" class="form-control" id="exampleInputBlogID" asp-for="BlogID" placeholder="Blog id Giriniz">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Etiketi Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

